    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profileImage1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/profile"
        app:civ_border_color="#FFF"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="6dp"
        app:civ_shadow_color="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/profileImage1"
        app:srcCompat="@drawable/person1"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toRightOf="@id/imageView3"
        android:layout_below="@id/profileImage1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/profileFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#0A0A0A"
        android:layout_below="@id/textView"
        android:layout_toRightOf="@id/imageView3"/>


    <EditText
        android:id="@+id/editNameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_toRightOf="@id/imageView3"
        android:visibility="invisible"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView"
        app:srcCompat="@drawable/email"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/imageView4"
        android:text="Email" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#0A0A0A"
        android:layout_toRightOf="@id/imageView4"
        android:layout_below="@id/textView5"
         />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_below="@id/textView5"
        app:srcCompat="@drawable/city" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="City"
        android:layout_toRightOf="@id/imageView10"
        android:layout_below="@id/textView5"/>

    <TextView
        android:id="@+id/profileCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#0A0A0A"
        android:layout_below="@id/textView10"
        android:layout_toRightOf="@id/imageView10"/>

    <EditText
        android:id="@+id/editCityField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_toRightOf="@id/imageView10"
        android:visibility="invisible"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:id="@+id/changeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage1"
        android:layout_marginLeft="-47dp"
        android:layout_marginTop="-43dp"
        android:layout_toRightOf="@id/profileImage1"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_below="@id/textView10"
        app:srcCompat="@drawable/phone" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Phone"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_below="@id/textView10"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/profilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:layout_below="@id/imageView6"
        android:layout_toRightOf="@id/imageView6"/>

    <ImageView
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage1"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_edit_black_24dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/editCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileEmail"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_edit_black_24dp"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@id/profilePhone"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_toRightOf="@+id/logout"
        android:visibility="invisible"
        android:layout_below="@id/profilePhone"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        />
</RelativeLayout>